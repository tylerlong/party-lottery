.bg-selects
  position absolute
  left 3px
  top 300px
  width 40px
  z-index 10
.bg-select
  width 20px
  height 20px
  border 2px solid #999
  margin-bottom 3px
  border-radius 3px
  opacity .7
  cursor pointer
  &.active
    border-color #fff
  &:hover
    box-shadow 0px 0px 3px 3px rgba(255, 255, 255, .6)
.bg-universe
  background #000
.bg-particle
  background #0d3f61
.bg-newyear
  background red
  
.cracker
  position absolute
  left 40px
  top 0
  width 150px
.mirror
  left auto
  right 40px
  transform scaleX(-1)
  filter FlipH